@using WebRegistrationTask.Models
@model RegistrationViewModel

@{
    ViewBag.Title = "Добавление пользователя";
}

<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Users.name" class="control-label">Имя</label>
        <input type="text" required asp-for="Users.name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Users.surname" class="control-label">Фамилия</label>
        <input type="text" required asp-for="Users.surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Users.birthday" class="control-label">Возраст</label>
        <input type="date" asp-for="Users.birthday" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Users.phone" class="control-label">Телефон</label>
        <input type="tel" pattern="^\+7\d{3}\d{7}$" value="+7" maxlength="12" required asp-for="Users.phone" class="form-control" />
    </div>


    <h2>Ваш любимый цвет?</h2>
    <div class="form-group">
        @foreach (var color in Model.Colors)
        {
            <div>
                <p><input type="checkbox" name="colorsList" value=@color.id /> @color.name</p>
            </div>
        }
    </div>
    <h2>Ваш любимый напиток?</h2>
    <div class="form-group">
        @foreach (var drink in Model.Drinks)
        {
            <div>
                <p><input type="checkbox" name="drinksList" value=@drink.id /> @drink.name</p>
            </div>
        }
    </div>

    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>